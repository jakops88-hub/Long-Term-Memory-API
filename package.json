{
  "name": "memory-as-a-service-api",
  "version": "1.0.0",
  "description": "Production-grade Memory-as-a-Service API built with Node.js, TypeScript, Express, and PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "worker": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "test": "jest --runInBand",
    "prisma:generate": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "build-action": "ncc build .github/actions/memvault-sync/index.ts -o .github/actions/memvault-sync/dist"
  },
  "keywords": [
    "memory",
    "api",
    "express",
    "typescript",
    "postgresql",
    "prisma"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "@upstash/redis": "^1.35.8",
    "axios": "^1.6.8",
    "bullmq": "^5.66.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "node-cron": "^4.2.1",
    "openai": "^6.10.0",
    "resend": "^6.6.0",
    "stripe": "^20.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@actions/core": "^2.0.1",
    "@actions/github": "^6.0.1",
    "@actions/glob": "^0.5.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.16",
    "@vercel/ncc": "^0.38.4",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "prisma": "^5.16.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
